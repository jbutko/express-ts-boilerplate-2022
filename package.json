{
  "name": "express-ts-boilerplate-2022",
  "version": "1.0.0",
  "description": "ExpressJS & Typescript boilerplate 2022",
  "main": "src/index.ts",
  "scripts": {
    "start": "node -r ts-node/register --inspect ./src/index.ts",
    "dev": "nodemon",
    "copyenv": "copyfiles -f src/.env build",
    "dev-alternative": "tsc && concurrently --kill-others \"tsc -w\" \"npm run copyenv && nodemon --inspect --debug-port=4999 build/index.js\"",
    "build:install": "yarn install --frozen-lockfile --silent --ignore-engines --pure-lockfile",
    "build": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint -p . --fix",
    "format": "prettier \"src/**/*.ts\" -l \"warn\"",
    "format:fix": "prettier --write \"src/**/*.ts\" -l \"warn\"",
    "format:lint:fix": "prettier --write \"src/**/*.ts\" -l \"warn\" && npm run lint:fix",
    "prod:reload:pm2": "pm2 reload express-ts-boilerplate-2022 --update-env"
  },
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "express",
    "expressjs",
    "server",
    "http-server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jbutko/express-ts-boilerplate-2022"
  },
  "author": "Jozef Butko <jbutko@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@47ng/check-env": "^2.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-joi-validation": "^5.0.1",
    "helmet": "^5.1.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.4.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "concurrently": "^7.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
